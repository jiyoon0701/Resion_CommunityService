<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.tukorea.project.mapper.BoardMapper">
     <select id="board_List" resultType="org.tukorea.project.domain.BoardVO">
     <![CDATA[
 		select * from board_free where residence = #{residence} order by board_date DESC
      ]]> 
     </select>
     
     <insert id="boardWrite"> 
   		insert into board_free(id, residence, content, image) values
 		(#{id},#{residence}, #{content}, #{image})
     </insert> 
 	
     <update id="update" >
	 	update board_free set content =#{content}
			 where num = #{num}
     </update> 
    
    <select id="read" resultType="BoardVO">
 		select * from board_free where num = #{num}
     </select>
    
    <delete id="delete">
		delete from board_free where num = #{num}
    </delete>
    
    <select id="comment" resultType="CommentVO">
		select * from comment_free where residence = #{residence}
    </select>
    
    <insert id="commentinsert"> 
   		insert into comment_free(boardnum, userid, comment, residence) values
 		(#{boardnum},#{userid}, #{comment}, #{residence}) 
     </insert> 
     <delete id="commentdelete">
		delete from comment_free where comment_num = #{Comment_num}
    </delete>
    
     <delete id="commentdeletes">
		delete from comment_free where boardnum = #{num}
    </delete>
</mapper>  